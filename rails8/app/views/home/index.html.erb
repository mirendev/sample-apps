<!-- app/views/shared/_hover_image.html.erb -->
<div class="min-h-screen w-full bg-black flex items-center justify-center">
  <div class="w-64 group translate-y-1/2 -mt-32">
    <!-- Image container -->
    <div class="relative h-64">
      <!-- Initial image -->
      <%= image_tag "kestrel-blackonblack.png",
          class: "absolute top-0 left-0 w-full h-full object-cover transition-all duration-500 ease-in-out group-hover:opacity-0",
          alt: "Initial image" %>
      
      <!-- Hover image -->
      <%= image_tag "kestrel-colored.png",
          class: "absolute top-0 left-0 w-full h-full object-cover transition-all duration-500 ease-in-out opacity-0 group-hover:opacity-100",
          alt: "Hover image" %>
    </div>
    
    <!-- Tagline -->
    <%= image_tag "runtime-dark.png",
        class: "w-full transition-all duration-500 ease-in-out opacity-0 group-hover:opacity-100",
        alt: "Tagline" %>
  </div>
</div>
